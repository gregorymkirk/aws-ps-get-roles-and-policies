{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowECS",
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "logs:PutLogEvents",
        "logs:CreateLogStream",
        "kms:*",
        "elasticloadbalancing:Describe*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECSLogGroup",
      "Effect": "Allow",
      "Action": [
        "logs:PutLogEvents",
        "logs:DescribeLogStreams",
        "logs:CreateLogStream",
        "logs:CreateLogGroup"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Sid": "AllowECSActions",
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "kms:*",
        "ecs:*",
        "ecr:*"
      ],
      "Resource": "*"
    }
  ]
}
